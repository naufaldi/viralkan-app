{
  "name": "viralkan-app",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:migrate": "cd apps/api && bun run db:migrate",
    "db:reset": "cd apps/api && bun run db:reset"
  },
  "devDependencies": {
    "@types/minimatch": "^6.0.0",
    "@types/node": "^22.10.2",
    "prettier": "^3.6.0",
    "turbo": "^2.5.4",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@hono/zod-openapi": "^0.19.9"
  }
}
